# Cloud Environment Configuration Template
# Copy this to .env and update with your actual values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=impact-analyzer-project
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Database Configuration - Cloud SQL
DATABASE_URL=mysql+pymysql://impact_user:impact_password_123@<DB_IP>:3306/impact_analyzer
VECTOR_DB_URL=postgresql://vector_user:vector_password_123@<VECTOR_DB_IP>:5432/vectors

# Google Cloud Storage
GCS_BUCKET_NAME=impact-analyzer-project-impact-analyzer-storage
GCS_VECTOR_BUCKET=impact-analyzer-project-impact-analyzer-vectors
GCS_LOGS_BUCKET=impact-analyzer-project-impact-analyzer-logs

# Vertex AI Configuration
VERTEX_AI_PROJECT=impact-analyzer-project
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=textembedding-gecko@003
VERTEX_AI_ENDPOINT=

# API Keys (use Secret Manager in production)
OPENAI_API_KEY=your_openai_api_key_here
IMPACT_ANALYZER_API_KEY=dev-key-123

# Service URLs - Cloud Run
MS_INDEX_URL=https://ms-index-uc.a.run.app
MS_MR_URL=https://ms-mr-uc.a.run.app
MS_COMMON_URL=https://ms-common-uc.a.run.app
MS_AI_URL=https://ms-ai-uc.a.run.app
MS_TESTCASE_URL=https://ms-testcase-uc.a.run.app

# Demo Project Configuration
DEMO_PROJECT_ID=angular-springboot-ecommerce
DEMO_REPO_URL=https://github.com/sinnedpenguin/angular-springboot-ecommerce.git

# Temporary paths (use /tmp in Cloud Run)
TEMP_REPO_PATH=/tmp/repos

# Logging
LOG_LEVEL=INFO

# Cloud Scheduler
DAILY_REFRESH_SCHEDULE=0 2 * * *